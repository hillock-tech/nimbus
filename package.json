{
  "name": "@hillock-tech/nimbus-js",
  "version": "1.0.1",
  "description": "A Node.js library for provisioning AWS serverless functions and API Gateway resources",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nimbus": "bin/nimbus.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build",
    "docs:install": "cd docs && npm install",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview",
    "docs:setup": "npm run docs:install && npm run docs:build"
  },
  "keywords": [
    "aws",
    "serverless",
    "lambda",
    "api-gateway",
    "infrastructure",
    "provisioning"
  ],
  "author": "Matthias Brooks <matthias@hillock-tech.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@aws-sdk/client-acm": "^3.600.0",
    "@aws-sdk/client-api-gateway": "^3.600.0",
    "@aws-sdk/client-dsql": "^3.919.0",
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "@aws-sdk/client-eventbridge": "^3.920.0",
    "@aws-sdk/client-iam": "^3.600.0",
    "@aws-sdk/client-lambda": "^3.600.0",
    "@aws-sdk/client-s3": "^3.919.0",
    "@aws-sdk/client-secrets-manager": "^3.921.0",
    "@aws-sdk/client-sqs": "^3.600.0",
    "@aws-sdk/client-ssm": "^3.921.0",
    "@aws-sdk/client-sts": "^3.600.0",
    "@aws-sdk/dsql-signer": "^3.919.0",
    "@aws-sdk/util-dynamodb": "^3.600.0",
    "archiver": "^7.0.0",
    "chalk": "^4.1.2",
    "nanoid": "^3.3.11",
    "ora": "^5.4.1",
    "pg": "^8.11.0",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.4",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^11.0.7",
    "@types/archiver": "^6.0.0",
    "@types/node": "^20.14.0",
    "semantic-release": "^24.2.0",
    "typescript": "^5.5.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "repositoryUrl": "https://github.com/hillock-tech/nimbus-js.git",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
